@model Web.Models.ViewModels.RoomIndexViewModel
@using Microsoft.AspNetCore.Identity
@using Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Index";
}
<h1>Rooms</h1>

@if (SignInManager.Context.User.IsInRole("Admin"))
{
    <form asp-controller="Rooms" asp-action="Create" method="get">
        <input class="btn btn-info" type="submit" value="Add room" />
    </form>
}
<hr />

@if (Model?.Rooms?.Any() ?? false)
{ 
    <ul class="list-inline text-dark">

        @foreach (var room in Model.Rooms.OrderBy(x=>x.Number))
        {
            <li class="pb-3 list-inline">
                <div class="d-flex border border-info justify-content-between list-inline text-dark flex-wrap flex-column flex-md-row w-100">
                    <div class="my-5 col-md-8 col-12">
                        <h3 class="text-dark font-weight-bold">Number: @room.Number</h3>
                        <p class="text-dark ">Type: @room.Type.ToString()</p>
                        <p class="text-dark ">AdultPrice: @room.AdultPrice</p>
                        <p class="text-dark ">Children Price: @room.ChildrenPrice</p>

                    </div>
                    <div class="col-md-3 col-3 float-end align-self-center">
                        <form asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id" method="get">
                            <input class="btn btn-info " type="submit" value="Info" />
                        </form>
                        <form asp-controller="Reservations" asp-action="Create" asp-route-id="@room.Id" method="get">
                            <input class="btn btn-success" type="submit" value="Reserve" />
                        </form>
                        @if (SignInManager.Context.User.IsInRole("Admin"))
                        {
                            <form asp-controller="Rooms" asp-action="Update" asp-route-id="@room.Id" method="get">
                                <input class="btn btn-primary" type="submit" value="Change" />
                            </form>
                            <form asp-controller="Rooms" asp-action="Delete" asp-route-id="@room.Id"
                                  method="post">
                                <input class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete?')" value="Delete" />
                            </form>
                        }
                    </div>
                </div>
            </li>
        }
    </ul>
}
else
{
    <h1>No rooms added yet</h1>
}

<partial name="_PaginationPartial" model="Model" />